<script>
  const translations = {
    es: { title: "Casa El Golfito", subtitle: "Apartamento vacacional exclusivo en El Golfo, Lanzarote.", cta: "Reservar Ahora", about_title: "La Experiencia", feat_1_title: "Vistas Únicas", feat_1_desc: "Vistas a la montaña y cercanía al Timanfaya.", feat_2_title: "Conectividad", feat_2_desc: "Wifi gratis de alta velocidad.", feat_3_title: "Confort Total", feat_3_desc: "2 dormitorios y terraza con vistas.", desc_title: "Tu refugio en Lanzarote", long_desc_1: "Apartamento El Golfito es un alojamiento con encanto, diseñado para ofrecer paz y conexión con la naturaleza.", long_desc_2: "Ideal para los amantes del ciclismo, la gastronomía local y los atardeceres inolvidables.", gallery_title: "Galería" },
    en: { title: "Casa El Golfito", subtitle: "Exclusive holiday apartment in El Golfo, Lanzarote.", cta: "Book Now", about_title: "The Experience", feat_1_title: "Unique Views", feat_1_desc: "Mountain views near Timanfaya.", feat_2_title: "Connectivity", feat_2_desc: "Free high-speed WiFi.", feat_3_title: "Total Comfort", feat_3_desc: "2 bedrooms and sea view terrace.", desc_title: "Your retreat in Lanzarote", long_desc_1: "El Golfito is a charming stay designed for peace and nature connection.", long_desc_2: "Perfect for cycling lovers, local food and unforgettable sunsets.", gallery_title: "Gallery" }
  };

  function changeLang(lang) {
    document.querySelectorAll('[data-key]').forEach(el => {
      const key = el.getAttribute('data-key');
      if (translations[lang] && translations[lang][key]) el.innerHTML = translations[lang][key];
    });
    document.querySelectorAll('.lang-switch button').forEach(btn => btn.classList.toggle('active', btn.innerText.toLowerCase() === lang));
  }

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => { if (entry.isIntersecting) entry.target.classList.add('active'); });
  }, { threshold: 0.1 });
  document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
</script>

